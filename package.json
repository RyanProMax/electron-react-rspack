{
  "name": "electron-react-rspack",
  "author": "Ryan",
  "version": "0.0.3",
  "description": "An Electron boilerplate including TypeScript, React, Rspack and ESLint.",
  "main": "build/loader.js",
  "scripts": {
    "start": "npm run start:preload && npm run start:renderer",
    "start:preload": "cross-env NODE_ENV=development rspack --config ./src/preload/rspack.config.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development rspack serve --config ./src/renderer/rspack.config.dev.ts",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only ./src/main/index.ts",
    "build:preload": "cross-env NODE_ENV=production rspack --config ./src/preload/rspack.config.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production rspack --config ./src/renderer/rspack.config.prod.ts",
    "build:main": "cross-env NODE_ENV=production rspack --config ./src/main/rspack.config.prod.ts",
    "build": "npm run clean && concurrently \"npm run build:main\" \"npm run build:preload\" \"npm run build:renderer\"",
    "clean": "ts-node ./scripts/clean.ts",
    "package:local": "npm run build && electron-builder build -c ./build.config.json --publish never",
    "package": "npm run build && electron-builder build -c ./build.config.json --publish always"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "typescript",
    "ts",
    "rspack"
  ],
  "devDependencies": {
    "@rspack/cli": "^0.3.6",
    "@svgr/webpack": "^8.1.0",
    "@types/fs-extra": "^11.0.2",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-log": "5.0.0-rc.1",
    "electron-updater": "^6.1.4",
    "electronmon": "^2.0.2",
    "eslint": "^8.50.0",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devEngines": {
    "node": ">=16.x",
    "npm": ">=8.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  },
  "license": "MIT"
}
