{
  "name": "electron-react-rspack",
  "author": "Ryan",
  "version": "0.0.1",
  "description": "An Electron boilerplate including TypeScript, React, Rspack and ESLint.",
  "main": "./src/main/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:preload": "cross-env NODE_ENV=development rspack --config ./src/preload/rspack.config.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development rspack serve --config ./src/renderer/rspack.config.dev.ts",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only ."
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "typescript",
    "ts",
    "rspack"
  ],
  "devDependencies": {
    "@rspack/cli": "^0.3.6",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cross-env": "^7.0.3",
    "electron": "^26.2.4",
    "electronmon": "^2.0.2",
    "eslint": "^8.50.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "fs-extra": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devEngines": {
    "node": ">=16.x",
    "npm": ">=8.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  },
  "license": "MIT"
}
