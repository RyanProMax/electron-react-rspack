{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "NodeNext",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "output"
  },
  "include": [
    "src/**/*",
    "assets/**/*"
  ],
  "exclude": [
    "release/**/*"
  ]
}
